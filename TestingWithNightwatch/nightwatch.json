{
  "src_folders" : ["tests"],

  "webdriver" :
  {
    "start_process": true,
    "server_path": "node_modules/.bin/chromedriver",
    "port": 9515
  },

  "test_settings" :
  {
    "default" :
    {
      "desiredCapabilities":
      {
        "browserName" : "chrome",
        "javascriptEnabled" : true,
        "acceptSslCerts" : true,
        "chromeOptions" :
        {
          "args" : ["start-fullscreen"],
          "w3c": false,
          "prefs" :
          {
            "credentials_enable_service" : false,
            "profile.password_manager_enabled" : false
          }
        }
      }
    }
  }
}